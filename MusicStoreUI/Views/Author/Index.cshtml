
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row my-3">

        @foreach (var Author in Model)
        {

            <div class="col-md-4">
            <hr />
                <div class="card text-center h-100" style="border: 3px black">
                    <div class="card-block">
                        <h4 class="card-title">@Author.Name</h4>
                        <h2><i class="fa fa-user fa-3x"></i></h2>
                    </div>
                    <div class="row px-2 no-gutters">
                        <div class="col-6">
                            <h3 class="card card-block border-top-0 border-left-0 border-bottom-0">@Author.Age y.o.</h3>
                        </div>
                        <div class="col-6">
                            @using (Html.BeginForm("ByAuthor", "Author", FormMethod.Get,
                            new { enctype = "multipart/form-data" }))
                            {
                                <input type="hidden" name="authorId" value="@Author.AuthorId" />
                                <button type="submit" class="btn btn-danger">
                                    See Albums
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
