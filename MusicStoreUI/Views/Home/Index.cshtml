@{
    ViewBag.Title = "Home Page";
}

<div class="container bg-success">
    <div class="row" style="margin-top: 78px;    margin-bottom: 73px;">
        <div class="col-md-6">
            <h1 style=" color: darkred; padding: 5px">Search Your Favorite Album Here</h1>
            <div id="custom-search-input">
                @using (Html.BeginForm("SearchAlbum", "Album", FormMethod.Post,
                                  new { enctype = "multipart/form-data" }))
                {
                    <div class="input-group col-md-12">

                        <input type="text" class="form-control input-lg" name="title" placeholder="Search Here" required />
                        <span class="input-group-btn">
                            <button class="btn btn-info btn-lg" type="submit">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<hr />
<div class="container" style="">
    <h2>On Sale Albums</h2>
    <div class="row" id="ads">
        @foreach (var item in Model)
        {
            <a href="/Album/singleAlbum/@item.AlbumId">
                <div class="col-md-4 CustomMarginTop">
                    <div class="card rounded">
                        <div class="card-image">


                            <span class="card-notify-badge bg-primary">@item.Category.Name</span>
                            @if (item.OnSale)
                            {
                                <span class="card-notify-year">SALE</span>
                            }
                            <img class="img-fluid CustomImg" src="@Url.Content(@item.ImagePath != null ? @item.ImagePath : " ")" alt="Alternate Text" min-height="300px" />
                        </div>
                        <div class="card-image-overlay m-auto">
                            <span class="card-detail-badge">@item.Name</span>
                            <span class="card-detail-badge">@item.Author.Name</span>
                            <span class="card-detail-badge">@item.NrOfSongs Songs</span>
                        </div>

                    </div>
                </div>
            </a>
        }

    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col text-center">

            <p><a href="/Album/Index" class="btn btn-danger btn-lg">See All Albums</a></p>
        </div>
    </div>
</div>